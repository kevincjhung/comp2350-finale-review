<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <link rel="stylesheet" href="bulma.min.css">
    <script defer src="https://use.fontawesome.com/releases/v5.3.1/js/all.js"> </script>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Items</title>
</head>

<body>
    <section class="section">
        <div class="maincolumns columns is-desktop is-vcentered">
            <div class="column is-10 is-offset-1 notification is-info is-light box container">
                <div class="title">
                    Purchase Items
                </div>
                <% if (locals.result) { %>
                    <div class="table-container">
                        <table class="table is-bordered is-hoverable is-striped is-narrow">
                            <thead>
                                <tr>
                                    <th> Item Name </th>
                                    <th> Item Description </th>
                                    <th> Item Cost </th>
                                    <th> Item Quantity </th>
                                    <th> add an item </th>
                                    <th> remove an item</th>
                                    <th> Delete </th>
                                    
                                    <!-- <th> &nbsp; </th> -->
                                </tr>
                            </thead>
                            <% let i=0; %>
                                <% let total=0; %>
                                    <% for(i=0; i < result.length; i++) { %>
                                        <tr>
                                            <td>
                                                <%= result[i].item_name %>
                                            </td>
                                            <td>
                                                <%= result[i].item_description %>
                                            </td>
                                            <td>
                                                <%= result[i].cost %>
                                                    <% total = total + Number(result[i].cost) %>
                                            </td>
                                            <td>
                                                <%= result[i].quantity%>
                                            </td>
                                            <td>
                                                <form action="plusItem" method="POST">
                                                    <span class="is-small">
                                                        <i class="fas fa-arrow-up"></i> 
                                                    </span>
                                                </form>
                                            </td>
                                            <td>
                                                <form action="minusItem" method="POST">
                                                    <span class="is-small">
                                                        <i class="fas fa-arrow-down"></i> 
                                                    </span>
                                                </form>
                                            </td>
                                            <td>
                                                <form action="deleteItem" method="POST">
                                                    <span class="delete is-small">
                                                        <i class="fas fa-star"></i> 
                                                    </span>
                                                </form>
                                            </td>
                                        </tr>
                                    <% } %>
                            <tfoot>
                                    <tr>
                                        <td colspan="4">
                                            There are <%= i %> items for a total of <%= total %> .
                                        </td>
                                    </tr>
                            </tfoot>
                        </table>
                    </div>
                    <% } %>
            </div>
        </div>
    </section>

    <form action="addItem" method="post">
        <div class="field is-horizontal">
            <div class="field-label is-normal">
                <label class="label">Add New item</label>
            </div>

            <div class="field-body">
                <div class="field">
                    <p class="control is-expanded">
                        <input name="item_name" class="input" type="text" placeholder="Item Name">
                    </p>
                </div>
                <div class="field">
                    <p class="control is-expanded">
                        <input name="item_description" class="input" type="text" placeholder="Description">
                    </p>
                </div>
                <div class="field">
                    <p class="control is-expanded">
                        <input name="cost" class="input" type="text" placeholder="Cost">
                    </p>
                </div>
                <div class="field">
                    <p class="control is-expanded">
                        <input name="quantity" class="input" type="text" placeholder="Quantity">
                    </p>
                </div>
                <div class="field">
                    <button class="button is-link">
                        <span>Add</span>
                        <span class="icon is-small">
                            <i class="fas fa-user-plus"></i>
                        </span>
                    </button>
                </div>
            </div>
        </div>
    </form>

</body>
</html>